<!DOCTYPE html>
<html>
  <head>
    <title>ZooU Consoles</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div id='header' class='container-fluid'>
      <div class='row'>
        <div class='col-lg-12'>
          <h1>ZooU Console</h1>
        </div>
      </div>

      <div class='row'>
        <div class='col-sm-2'><%= link_to 'Users', users_path %></div>
        <div class='col-sm-2'><%= link_to 'Packages', packages_path %></div>
        <div class='col-sm-2'><%= link_to 'Staff', employees_path %></div>
        <div class='col-sm-2'><%= link_to 'Branches', branches_path %></div>
        <div class='col-sm-2'><%= link_to 'Lockers', lockers_path %></div>
        <div class='col-sm-2'><%= link_to 'Logs', logs_path %></div>
      </div>
    </div>

    <div id='content' class='container-fluid'>
      <%= render "layouts/flash_messages" %>
      <%= yield %>
    </div>

    <div id='footer' class='container-fluid'>
      <div class='row'>
        <div class='col-lg-12'>
          <p>ZooU Console</p>
        </div>
      </div>
    </div>
  </body>
</html>
